  "source_docs": ["OM-A", "OM-B", "MEL", "MCM", "OpsSpecs"],
  "anchor_sections": ["Fleet", "Company Aircraft", "Aircraft Types"],
  "scope": "section",
  "positive_patterns": [
    "(?i)S[- ]?76C\\+\\+|S[- ]?76\\b",
    "(?i)\\bfleet\\b|\\baircraft\\b|\\bregistration(s)?\\b"
  ],
  "negative_patterns": [],
  "forbidden_claims": [
    "(?i)\\b4X-(?!BHS\\b|BEX\\b|BHT\\b|BOB\\b)[A-Z]{3}\\b",
